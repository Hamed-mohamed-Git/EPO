<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcomeFragments.Third_welcome">

    <ImageView
        android:id="@+id/thirdWelcomeImage"
        android:layout_width="439dp"
        android:layout_height="524dp"
        android:src="@drawable/fourthimage"
        app:layout_constraintBottom_toBottomOf="@+id/thirdWelcomeTextView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/thirdWelcomeTextView1"
        android:layout_width="330dp"
        android:layout_height="100dp"

        android:fontFamily="@font/geomanistbold"
        android:text="The great art of learning is to understand but little at a time."
        android:textColor="#de5a53"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/thirdWelcomeTextView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/thirdWelcomeTextView2"
        android:layout_width="340dp"
        android:layout_height="wrap_content"

        android:text="we’ll see you how you can deploy full-blown projects production-ready in a typical time . Let’s look into what kind of projects we’ll build and what technologies we’ll use."
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/minuteThirdFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.881" />

    <ImageView
        android:id="@+id/minuteThirdFragment"
        android:layout_width="83dp"
        android:layout_height="27dp"

        android:src="@drawable/minutethirdfragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.799" />

    <ImageView
        android:id="@+id/thirdWelcomeButton"
        android:layout_width="74dp"
        android:layout_height="80dp"
        android:src="@drawable/thirdwelcomefragmentbackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minuteThirdFragment"
        app:layout_constraintVertical_bias="0.737"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>