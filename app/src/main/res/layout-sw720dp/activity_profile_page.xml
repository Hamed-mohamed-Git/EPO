<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:background="#F7F8FB"
    tools:context=".DashBoard.profile.profilePageActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/profileLogout_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="15sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/signout_button_background"
            android:elevation="20sp"
            android:outlineSpotShadowColor="@color/black">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:layout_marginEnd="1sp"
                android:src="@drawable/leftdashboardtabs" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:paddingBottom="5sp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="200dp"
                android:layout_height="200sp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="25sp"
                android:src="@drawable/perjson" />

            <FrameLayout
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="end"
                android:layout_marginTop="150sp"
                android:layout_marginEnd="25sp">

                <FrameLayout
                    android:id="@+id/addPhoto_button"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/add_image_button_background"
                    android:elevation="7sp">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:src="@drawable/addone"
                        app:tint="@color/white" />
                </FrameLayout>
            </FrameLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/futur"
            android:text="Heiden Biermann"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/futur"
            android:text="Type to edit"
            android:textColor="#343434"
            android:textSize="33sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100sp"
            android:layout_marginStart="150sp"
            android:layout_marginTop="100sp"
            android:layout_marginEnd="150sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/navigation_layout_background_background"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/loginDetailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:background="@drawable/navigartion_first_layout">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20sp"
                        android:background="@drawable/navigaiton_items_background">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="1sp"
                            android:src="@drawable/profile"
                            app:tint="@color/black" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="70dp"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/futur"
                            android:text="Login details"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1sp"
                            android:fontFamily="@font/futur"
                            android:text="User name, Password"
                            android:textSize="8sp" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginEnd="15sp"
                        android:background="@drawable/signout_button_background">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="1sp"
                            android:src="@drawable/rightarrowtabs" />
                    </FrameLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/helpLayout"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:background="@drawable/naviagtion_center_layout">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20sp"
                        android:background="@drawable/navigaiton_items_background">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="1sp"
                            android:src="@drawable/headset"
                            app:tint="@color/black" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="70dp"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/futur"
                            android:text="Help"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1sp"
                            android:fontFamily="@font/futur"
                            android:text="FAQs, Helpdesk"
                            android:textSize="8sp" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginEnd="15sp"
                        android:background="@drawable/signout_button_background">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="1sp"
                            android:src="@drawable/rightarrowtabs" />
                    </FrameLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/legalInformationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:background="@drawable/naviagtion_center_layout">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20sp"
                        android:background="@drawable/navigaiton_items_background">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="1sp"
                            android:src="@drawable/profiledouc"
                            app:tint="@color/black" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="70dp"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/futur"
                            android:text="Legal information"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1sp"
                            android:fontFamily="@font/futur"
                            android:text="Terms &amp; Conditions, Privacy Policy"
                            android:textSize="8sp" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginEnd="15sp"
                        android:background="@drawable/signout_button_background">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="1sp"
                            android:src="@drawable/rightarrowtabs" />
                    </FrameLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/FaceDetailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:background="@drawable/navigartion_last_layout">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20sp"
                        android:background="@drawable/navigaiton_items_background">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="1sp"
                            android:src="@drawable/faceid"
                            app:tint="@color/black" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="70dp"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/futur"
                            android:text="Face ID verification"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1sp"
                            android:fontFamily="@font/futur"
                            android:text="Enabled"
                            android:textSize="8sp" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginEnd="15sp"
                        android:background="@drawable/signout_button_background">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="1sp"
                            android:src="@drawable/rightarrowtabs" />
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="85sp"
        android:layout_gravity="bottom"
        android:elevation="50sp"
        android:outlineAmbientShadowColor="@color/black"
        android:background="@drawable/profile_logout_layout_background"
        android:backgroundTint="@color/white"
        >
        <FrameLayout
            android:id="@+id/logOut"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="150sp"
            android:layout_marginEnd="150sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/logout_button_background_layout">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/logout"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:fontFamily="@font/proxima"
                    android:text="Log out"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
</FrameLayout>