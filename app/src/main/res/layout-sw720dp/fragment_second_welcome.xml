<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    tools:context=".welcomeFragments.Second_welcome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="470dp"
                android:background="@drawable/thirdimage"
                />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="45sp"
                android:layout_marginTop="30sp"
                android:layout_marginStart="45sp"
                android:fontFamily="@font/coolveticarg"
                android:text="People expect to be bored by eLearning—let’s show you it doesn’t have to be like that!"
                android:textColor="#056ef4"
                android:textSize="49sp"
                />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="45sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="45sp"
                android:text="With Us you can see one of the most cost-effective ways to educate the world’s rapidly expanding workforce."
                android:textSize="35sp"
                />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="160sp"
                android:layout_height="110sp"
                android:layout_marginTop="120sp"
                android:src="@drawable/secondfragmentminute"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>




    <ImageView
        android:id="@+id/secondWelcomeButton"
        android:layout_width="130dp"
        android:layout_height="135dp"
        android:layout_gravity="right|bottom"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/secondfragmentbuttonbackgroud"
        />

</FrameLayout>
