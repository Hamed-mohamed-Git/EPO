<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardBackgroundColor="@color/transpernt"

    >

    <LinearLayout
        android:id="@+id/tabsLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5sp"
        android:background="@drawable/fragment_markes_bar_viewcard_background"
        android:orientation="vertical"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        >
        <FrameLayout
            android:id="@+id/marksBarLayout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#D9FAF1"
            android:background="@drawable/signout_button_background">

            <ImageView
                android:id="@+id/tapImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
               android:layout_gravity="center"
                app:srcCompat="@drawable/trust"
                app:tint="#63D5B3" />

        </FrameLayout>
        <TextView
            android:id="@+id/tapNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:textColor="#878284"
            android:fontFamily="@font/robotoregular"
            android:text="Teacheres"
            android:textSize="15dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>