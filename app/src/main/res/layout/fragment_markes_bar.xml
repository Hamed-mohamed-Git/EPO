<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardBackgroundColor="@color/barColor"

    >

    <LinearLayout
        android:id="@+id/marksBarLayout"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/fragment_markes_bar_viewcard_background">
        <ImageView
            android:id="@+id/tapImage"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15sp"

            app:srcCompat="@drawable/cap" />
        <TextView
            android:id="@+id/tapNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:paddingEnd="25dp"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/geomanistregular"
            android:text="hamed"
            android:textSize="20dp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>