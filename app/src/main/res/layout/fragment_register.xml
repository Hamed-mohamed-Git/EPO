<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".logPages.RegisterFragment">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="340dp"
        android:layout_height="343dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:src="@drawable/register_image_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="373dp"
        android:layout_height="362dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/register"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/robotobold"
        android:text="Discover your perfect learning Here"
        android:textAlignment="center"
        android:textColor="#373737"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/geomanistregular"
        android:text="Explore all the most exiting programming courses based on interesting protocols  "
        android:textAlignment="center"
        android:textColor="#8c8c8c"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <View
        android:id="@+id/view3"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/register_buttons_view_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/register"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:background="@drawable/register_button_background"
        android:fontFamily="@font/geomanistbold"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#373737"
        android:textSize="15dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3" />

    <Button
        android:id="@+id/signIn"
        style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="153dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/sign_in_register_button_background"
        android:fontFamily="@font/geomanistbold"
        android:text="sign In"
        android:textAllCaps="false"
        android:textColor="#373737"
        android:textSize="15dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>