<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/profile_dialog_background"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/dialogBackButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="25sp"
        android:layout_marginTop="30sp"
        android:background="@drawable/signout_button_background"
        android:elevation="5sp"
        >

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:layout_marginEnd="1sp"
            android:src="@drawable/leftdashboardtabs" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30sp"
        android:backgroundTint="@color/white"
        android:background="@drawable/course_lesson_seeall_background">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15sp"
            android:layout_gravity="center"
            android:src="@drawable/logoforsplash"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35sp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/futur"
            android:text="Logged by"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_marginStart="6sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/futur"
            android:text="EPO University"
            android:textColor="@color/barColor"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5sp"
        android:fontFamily="@font/futur"
        android:text="Your info at a glance"
        android:textColor="#343434"
        android:textSize="13sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:layout_marginTop="60sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"

        android:background="@drawable/profile_dailog_login_details_layout_background">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="25sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futur"
                android:text="User name"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="#B6B6B6"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/userNameDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/feral"
                android:layout_gravity="center_vertical"
                android:text="Heiden Biermann"
                android:textStyle="bold"
                android:layout_marginStart="20sp"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="19sp"
            android:background="@drawable/signout_button_background"
            >


        </FrameLayout>


    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:background="@drawable/profile_dailog_login_details_layout_background">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="25sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futur"
                android:text="Email"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="#B6B6B6"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/emailDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/feral"
                android:layout_gravity="center_vertical"
                android:text="hamed.arfat@yahoo.com"
                android:textStyle="bold"
                android:layout_marginStart="20sp"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="19sp"
            android:background="@drawable/signout_button_background"
            >


        </FrameLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="100sp"
        android:background="@drawable/profile_dailog_login_details_layout_background">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="25sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futur"
                android:text="Password"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="#B6B6B6"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/passwordDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/feral"
                android:layout_gravity="center_vertical"
                android:text="00000000"
                android:textStyle="bold"
                android:layout_marginStart="20sp"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="19sp"
            android:background="@drawable/signout_button_background"
            >


        </FrameLayout>
    </FrameLayout>


</LinearLayout>