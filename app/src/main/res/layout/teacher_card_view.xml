<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/transpernt"
    android:layout_gravity="center"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    android:layoutDirection="ltr"
    app:cardMaxElevation="0dp">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:background="@drawable/teacher_layout_background"
            android:padding="15sp"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/teacherImage"
                android:layout_width="140dp"
                android:layout_height="170dp"
                android:elevation="5sp"
                android:scaleType="fitXY"
                android:outlineSpotShadowColor="@color/black"
                android:src="@drawable/chrisimage"
                app:riv_corner_radius="10sp"
                />

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="130sp"
                android:layout_marginStart="120sp"
                android:elevation="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginEnd="10sp"
                android:outlineSpotShadowColor="@color/black"
                android:background="@drawable/teacher_info_card_background"
                android:backgroundTint="#F8F7F9"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/teacherInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1C2451"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="@font/futur"
                    android:text="After building apps for enterprise clients for years, I found a passion for helping non-coders discover a love for programming, become professional developers and change their careers. I would love to help you reach your goals!"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginBottom="10sp">
                    <TextView
                        android:id="@+id/teacherName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1C2451"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:textSize="10sp"
                        android:fontFamily="@font/futur"
                        android:text="Chris"
                        />
                    <TextView
                        android:id="@+id/teacherJob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1C2451"
                        android:gravity="center"
                        android:textSize="9sp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/futur"
                        android:text="iOS Developer
"
                        />
                </LinearLayout>
            </FrameLayout>

        </FrameLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>