<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/transpernt"
    app:cardMaxElevation="0dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="15sp"
        android:paddingEnd="15sp"
        >
        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="340dp"
            android:elevation="7sp"
            android:background="@drawable/main_dashboard_course_card_item_framelayout_background"
            android:layout_margin="20sp"
            >


            <ImageView
                android:id="@+id/topCoursesImage"
                android:layout_width="230dp"
                android:layout_gravity="center"
                android:layout_height="200dp"
                android:layout_marginBottom="10sp"
                app:srcCompat="@drawable/foundation" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/view14"
                    android:layout_width="85dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="25dp"
                    android:backgroundTint="#F5F7FF"
                    android:background="@drawable/price_background_item_card"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35sp"
                    android:layout_marginTop="21dp"
                    android:fontFamily="@font/robotobold"
                    android:textColor="@color/black"
                    android:text="$"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/topCoursesHowMuchCosts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45sp"
                    android:layout_marginTop="21dp"
                    android:text="100.99"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotobold"
                    android:textSize="18sp"/>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/topCoursesText"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Foundation"
                android:textSize="25dp"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/black"
                android:layout_marginBottom="45sp"
                android:layout_marginStart="30dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="20dp"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="2sp"
                    android:src="@drawable/lesson"/>
                <TextView
                    android:id="@+id/topCoursesHowManyCourses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:fontFamily="@font/geomanistbold"
                    android:text="12"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lesson"
                    android:layout_marginStart="4sp"
                    android:fontFamily="@font/geomanistbold"/>
            </LinearLayout>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity = "bottom"
                android:layout_marginStart="180dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/heart"/>
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>