<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/nested_scroll_view_background"
    android:backgroundTint="#F8F7F9"
    tools:context=".home.introduction.fragments.ourCourses.ourCoursesFragment">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:fontFamily="@font/proximaextrabold"
        android:gravity="center"
        android:text="Land your dream opportunity with life changing Programming skills"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view10"
            android:layout_gravity="center"
            android:background="@drawable/find_course_card_dashboard_background"
            android:backgroundTint="#FFEEB6"
            android:layout_width="330dp"
            android:layout_height="160dp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="5sp"
            android:src="@drawable/introductioncourseimage" />

        <Button
            android:id="@+id/checkNowFindCoursesDashboard"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="110dp"
            android:layout_marginStart="18sp"
            android:background="@drawable/navigation_bar_pressed_item"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:fontFamily="@font/robotobold"
            android:textSize="15sp"
            app:backgroundTint="@null"
            android:text="Just scroll" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="140dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/proxima"
            android:text="Let's Find a perfect tutor for you" />
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:layout_marginStart="30sp"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:fontFamily="@font/robotobold"
        android:textColor="@color/black"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoriesRecycleViewCourseIntroduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Courses"
        android:layout_marginStart="30sp"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:fontFamily="@font/robotobold"
        android:textColor="@color/black"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/TopCoursesRecycleViewCourseIntroduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="30sp"/>

</LinearLayout>