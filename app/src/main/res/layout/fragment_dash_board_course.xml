<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F6EF"
    tools:context=".DashBoard.fragmentPages.courses.dashBoardCourseFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tabsCoursesDashboardRE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:background="#F6F6EF"
        android:orientation="horizontal"
         />


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25sp"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view10"
            android:layout_gravity="center"
            android:background="@drawable/find_course_card_dashboard_background"
            android:layout_width="330dp"
            android:layout_height="160dp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="5sp"
            android:src="@drawable/findcoursecarddashboard" />

        <Button
            android:id="@+id/checkNowFindCoursesDashboard"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="110dp"
            android:layout_marginStart="15sp"
            android:background="@drawable/navigation_bar_pressed_item"
            android:textColor="#7368BC"
            android:textAllCaps="false"
            android:fontFamily="@font/robotobold"
            android:textSize="15sp"
            app:backgroundTint="@null"
            android:text="Check Now" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="140dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:textColor="#7368BC"
            android:textSize="16sp"
            android:fontFamily="@font/robotobold"
            android:text="Find a course you want to learn!" />
    </FrameLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/coursesOnCoursesDashboardRE"
        android:layout_width="370dp"
        android:layout_height="match_parent"
        android:background="#F6F6EF"
        android:layout_marginTop="25sp"
        android:layout_gravity="center"
        android:orientation="vertical"/>
    
</LinearLayout>