<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcomeFragments.get_started_Fragment"
    android:background="#f8f7ef"
    android:layoutDirection="ltr"
    >

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="1dp"
        android:src="@drawable/geomentre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.634" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/epologo" />

            <TextView
                android:id="@+id/Raad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alfontcomhafsfont"
                android:text="سورة الرعد"
                android:textColor="#8e6334"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/Ayat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/alfontcomhafsfont"
                android:text="فَأَمَّا الزَّبَدُ فَيَذْهَبُ جُفَاءً ۖ وَأَمَّا مَا يَنفَعُ النَّاسَ فَيَمْكُثُ فِي الْأَرْضِ ۚ كَذَٰلِكَ يَضْرِبُ اللَّهُ الْأَمْثَالَ"
                android:textColor="#8e6334"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                />
            <TextView
                android:id="@+id/translation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="For the scum disappears like froth cast out; while that which is for the good of mankind remains on the earth. Thus doth Allah set forth parables."
                android:textColor="#a6862c"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="240dp"
                    android:layout_height="230dp"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/stand"
                    />
                <ImageView
                    android:id="@+id/audioCase"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="7dp"
                    android:src="@drawable/play"
                    android:visibility="invisible"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="1sp"
                    />
                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/qurran"
                    />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/get_started_button_background"
        android:drawableEnd="@drawable/getstartedarrow"
        android:fontFamily="@font/geomanistregular"
        android:paddingEnd="8dp"
        android:text="Get started"
        android:textAllCaps="false"
        android:textColor="@drawable/get_started_text_button_background"
        android:textSize="17sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        />
</FrameLayout>

