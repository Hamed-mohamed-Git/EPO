<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8"
    android:layoutDirection="ltr"
    tools:context=".home.introduction.fragments.ourCourses.CourseDetails.courseDetails">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10sp"
            android:layout_marginStart="15sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/signout_button_background"
            android:elevation="5sp"
            >

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:layout_marginEnd="1sp"
                android:src="@drawable/leftdashboardtabs" />
        </FrameLayout>


        <TextView
            android:id="@+id/textView56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:fontFamily="@font/robotobold"
            android:textColor="@color/black"

            android:text="Course Details" />
    </FrameLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:elevation="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="25sp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/top_courses_item_card_background">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="25dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/courseDetailsCourseName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Foundation"
                            android:textSize="30dp"
                            android:fontFamily="@font/futuraheavyfont"
                            android:textColor="@color/black"/>

                        <LinearLayout
                            android:layout_marginTop="5sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1sp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView61"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:fontFamily="@font/futur"
                                android:text="By:" />

                            <TextView
                                android:id="@+id/courseDetailsTeacherName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/robotobold"
                                android:layout_marginTop="1sp"
                                android:text="Chris Ching" />

                        </LinearLayout>
                        <FrameLayout
                            android:layout_width="100sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15sp"
                            android:background="@drawable/price_background_item_card"
                            android:backgroundTint="#FDB932">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:text="Best seller"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:id="@+id/priceFrameLayout"
                            android:layout_width="100sp"
                            android:layout_height="40sp"
                            android:layout_marginTop="15sp"
                            android:background="@drawable/price_background_item_card"
                            android:backgroundTint="#414588">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                android:layout_marginStart="10dp"
                                android:textColor="@color/white"
                                android:text="$"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="5dp"/>
                            <TextView
                                android:id="@+id/courseDetailsPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="199.99"
                                android:textSize="18sp"
                                android:fontFamily="@font/robotobold"
                                android:layout_marginStart="28dp"
                                android:layout_marginTop="8dp"
                                android:textColor="@color/white"/>
                        </FrameLayout>


                    </LinearLayout>
                    <ImageView
                        android:id="@+id/courseDetailsCourseImage"
                        android:layout_width="190dp"
                        android:layout_height="190dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="45dp"

                        app:srcCompat="@drawable/datastructurepart2course" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="230dp"
                        android:weightSum="3"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <FrameLayout
                                android:id="@+id/peopleCourseDetailsFrameLayout"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/roundes_background"
                                android:backgroundTint="#DCE0FF">


                                <ImageView
                                    android:id="@+id/peopleCourseDetails"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/peopleincoursedetailourcourses"
                                    android:backgroundTint="#47408B" />
                            </FrameLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="4.6k"
                                android:textSize="13sp"
                                android:fontFamily="@font/robotobold"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="8sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_marginStart="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <FrameLayout
                                android:id="@+id/starCourseDetailsFrameLayout"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/roundes_background"
                                android:backgroundTint="#DCE0FF">


                                <ImageView
                                    android:id="@+id/starCourseDetails"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/starincoursedetailourcourses"
                                    android:backgroundTint="#47408B" />
                            </FrameLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="1.0k"
                                android:textSize="13sp"
                                android:fontFamily="@font/robotobold"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="8sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_marginStart="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <FrameLayout
                                android:id="@+id/likeCourseDetailsFrameLayout"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/roundes_background"
                                android:backgroundTint="#DCE0FF">


                                <ImageView
                                    android:id="@+id/likeCourseDetails"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/likeincoursedetailourcourses"
                                    android:backgroundTint="#47408B" />
                            </FrameLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="2.5k"
                                android:textSize="13sp"
                                android:fontFamily="@font/robotobold"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="8sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>


            </FrameLayout>

            <TextView
                android:id="@+id/textView63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotobold"
                android:text="Course Preview" />

            <FrameLayout
                android:id="@+id/IntroductionVideoButton"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="25sp"
                android:elevation="5sp"
                android:background="@drawable/top_courses_item_card_background"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp">
                <FrameLayout
                    android:id="@+id/coursePlayFrameLayout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginStart="20sp"
                    android:background="@drawable/roundes_background"
                    android:backgroundTint="#DCE0FF">


                    <ImageView
                        android:id="@+id/CourseDetailsPlayButton"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/playincoursedetailourcourses"
                        android:backgroundTint="#47408B" />
                </FrameLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="30sp"
                    android:layout_marginBottom="2sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView64"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotobold"
                        android:textSize="18sp"

                        android:text="Introduction" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/VideoTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#47408B"
                            android:text="5" />
                        <TextView
                            android:id="@+id/VideoTimeMinutes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="7dp"
                            android:textColor="#47408B"
                            android:textSize="15sp"
                            android:text="minutes" />
                    </LinearLayout>
                </LinearLayout>


                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="25sp"
                    android:layout_marginTop="25dp"
                    app:srcCompat="@drawable/nextincoursedetailourcourses" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Included"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/futur"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/courseIncluded"
                    android:layout_width="wrap_content"

                    android:layout_height="60dp"
                    android:background="@drawable/course_details_in_ourcourses"
                    app:backgroundTint="@null"

                    android:backgroundTint="#DCE0FF"
                    android:textColor="#47408B"
                    android:textAllCaps="false"
                    android:fontFamily="@font/futur"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:shadowColor="#DCE0FF"
                    android:outlineSpotShadowColor="#DCE0FF"
                    android:text="Course Included" />

                <Button
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="@drawable/course_details_in_ourcourses"
                    app:backgroundTint="@null"
                    android:backgroundTint="@color/white"
                    android:textColor="#47408B"
                    android:layout_marginStart="20sp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/futur"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:shadowColor="@color/white"
                    android:outlineSpotShadowColor="@color/white"
                    android:text="Description"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/courseIncludedLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:visibility="visible"
                android:layout_marginTop="25dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/roundes_background"
                            android:backgroundTint="#FDB932">


                            <ImageView
                                android:id="@+id/imageView21gg"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/videocameraincoursedetailourcourses"
                                app:tint="@color/white" />
                        </FrameLayout>
                        <TextView
                            android:id="@+id/courseDetailsLessenCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="12"
                            android:textSize="13sp"
                            android:fontFamily="@font/robotobold"
                            android:layout_marginStart="8sp"
                            android:layout_marginTop="8sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Video lessons"
                            android:textSize="13sp"
                            android:fontFamily="@font/robotobold"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="8sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="45sp"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/roundes_background"
                            android:backgroundTint="#FDB932">


                            <ImageView
                                android:id="@+id/imageView21dgg"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/asseptdocumentfreeiconfontincoursedetailourcourses"
                                app:tint="@color/white" />
                        </FrameLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Assignment"
                            android:textSize="13sp"
                            android:fontFamily="@font/robotobold"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="8sp"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="25sp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/roundes_background"
                            android:backgroundTint="#FDB932">


                            <ImageView
                                android:id="@+id/imagedView21gg"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/documentincoursedetailourcourses"
                                app:tint="@color/white" />
                        </FrameLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Support Files"
                            android:textSize="13sp"
                            android:fontFamily="@font/robotobold"
                            android:layout_marginStart="8sp"
                            android:layout_marginTop="9sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="69sp"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/roundes_background"
                            android:backgroundTint="#FDB932">


                            <ImageView
                                android:id="@+id/imageView21ddgg"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/secureincoursedetailourcourses"
                                app:tint="@color/white" />
                        </FrameLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Certificate"
                            android:textSize="13sp"
                            android:fontFamily="@font/robotobold"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="8sp"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/futur"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:id="@+id/descriptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:elevation="5sp"
                android:background="@drawable/top_courses_item_card_background"
                android:layout_marginStart="25dp"
                android:paddingBottom="20sp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello!"
                    android:layout_gravity="center_horizontal"
                    android:textSize="30sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="5sp"
                    android:fontFamily="@font/futur"
                    android:textColor="#47408B"
                    />

                <TextView
                    android:id="@+id/FirstParagraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="12sp"
                    android:layout_marginEnd="5sp"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:fontFamily="@font/futur"
                    android:textColor="@color/black"
                    android:text="Chris here. I want to give you a big, warm welcome to the SwiftUI iOS Foundations course!" />

                <TextView
                    android:id="@+id/SecondParagraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_marginStart="12sp"
                    android:layout_marginEnd="5sp"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:fontFamily="@font/futur"
                    android:textColor="@color/black"
                    android:text="In this course, you'll learn the basics of iOS app development using Apple's newest SwiftUI framework." />

                <TextView
                    android:id="@+id/ThirdParagraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_marginStart="12sp"
                    android:layout_marginEnd="5sp"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:fontFamily="@font/futur"
                    android:textColor="@color/black"
                    android:text="By the end, you'll be able to build multi-view apps powered by data from APIs or your own JSON feeds. " />

                <TextView
                    android:id="@+id/FourthParagraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_marginStart="12sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginBottom="20sp"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:fontFamily="@font/futur"
                    android:textColor="@color/black"
                    android:text="(Don't worry if these terms are foreign to you; they are different ways of providing data to the app and you'll learn all about them in the course)" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/checkoutButton"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:layout_marginTop="60sp"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:layout_marginBottom="45sp"

                android:backgroundTint="#47408B"
                android:background="@drawable/check_out_background"
                android:elevation="5sp"
                >

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="23sp"
                    android:layout_height="23sp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="30sp"
                    android:layout_marginTop="27sp"
                    app:tint = "@color/white"
                    app:srcCompat="@drawable/nextincoursedetailourcourses" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Checkout"
                    android:fontFamily="@font/futur"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8sp"
                    android:textSize="23sp"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>