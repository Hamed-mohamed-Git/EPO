<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layoutDirection="ltr"
    tools:context=".welcomeFragments.First_welcome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20sp"
                android:scaleType="center"
                android:layout_marginStart="20sp"
                android:background="@drawable/firstpage"
                />
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima"
                android:text="Learning Never Exhausts The Mind"
                android:textColor="#f7b207"
                android:textSize="55sp"
                android:textStyle="bold"
                android:layout_marginTop="30sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mediem"
                android:text="We tell students that the opportunities we had were a result of having a good educational background. Education is what allows you to stand out."
                android:textColor="#989898"
                android:textSize="25dp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp" />


            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="130sp"
                android:layout_height="100sp"
                android:layout_marginTop="30sp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/firstminute"
                />

        </LinearLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/firstWelcomeButton"
        android:layout_width="92dp"
        android:layout_height="95dp"
        android:layout_marginEnd="10sp"
        android:src="@drawable/firstwelcomebuttonbackground"
        android:layout_marginBottom="10sp"
        android:layout_gravity="right|bottom" />
</FrameLayout>

