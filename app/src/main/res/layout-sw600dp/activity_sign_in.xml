<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".logPages.signInActivity"
    android:background="#F7F8FB">

    <FrameLayout
        android:id="@+id/loginBackButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/signout_button_background"
        android:elevation="5sp"
        >

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:layout_marginEnd="1sp"
            android:src="@drawable/leftdashboardtabs" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:backgroundTint="@color/white"
        android:background="@drawable/course_lesson_seeall_background">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15sp"
            android:layout_gravity="center"
            android:src="@drawable/logoforsplash"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45sp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/futur"
            android:text="Login to"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:layout_marginStart="6sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/futur"
            android:text="EPO University"
            android:textColor="@color/barColor"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5sp"
        android:fontFamily="@font/futur"
        android:text="Your info at a glance"
        android:textColor="#343434"
        android:textSize="18sp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:elevation="2sp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5sp"
            android:background="@drawable/sign_in_email_edit_text_background"
            android:drawableLeft="@drawable/emailedit"
            android:drawableTint="@color/white"
            android:drawablePadding="12dp"
            android:textCursorDrawable="@drawable/sign_in_cursor_edit_text"
            android:ems="10"
            android:inputType="text"
            android:textColorHighlight="#c6c6c5"
            android:paddingStart="23dp"
            android:paddingTop="12dp"
            android:paddingEnd="8sp"
            android:paddingBottom="12sp"
            android:hint="E-mail"
            android:textColor="@color/barColor"
            />
        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:elevation="2sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="25sp"
            android:layout_marginTop="1sp"
            android:src="@drawable/emailedit"
            app:tint="@color/black" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15sp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editTextTextPassword"
            android:elevation="2sp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5sp"
            android:background="@drawable/sign_in_email_edit_text_background"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="12dp"
            android:ems="10"
            android:drawableTint="@color/white"
            android:hint="Password"
            android:textCursorDrawable="@drawable/sign_in_cursor_edit_text"
            android:inputType="textPassword"
            android:paddingStart="23sp"
            android:paddingTop="12sp"
            android:paddingEnd="8sp"
            android:textColorHighlight="#c6c6c5"
            android:paddingBottom="12sp"
            android:textColor="@color/barColor"
            />



        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:elevation="2sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="25sp"
            android:layout_marginTop="1sp"
            android:src="@drawable/lock"
            app:tint="@color/black" />


    </FrameLayout>




    <Button
        android:id="@+id/signInButton"
        android:layout_marginTop="50sp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/sign_in_button_background"
        android:enabled="false"
        android:text="Sign In"
        android:elevation="10sp"
        android:textAllCaps="false"
        android:textColor="@drawable/sign_in_button_text_background"
        android:textSize="20dp"
        app:backgroundTint="@null"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="505dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Or sign In with"
        android:textColor="#949494"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signInButton" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15sp"
        android:layout_gravity="center_horizontal"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="609dp">

        <FrameLayout
            android:id="@+id/signWithFacebookFrameLayout"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="20sp"
            android:elevation="3sp"
            android:background="@drawable/button_sign_in_with_background"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="609dp">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/signWithFacebook"
                android:layout_width="31dp"
                android:layout_height="27dp"
                android:visibility="gone"
                android:layout_gravity="center" />
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/signfacebook" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/signInWithGithub"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="20sp"
            android:elevation="3sp"
            android:background="@drawable/button_sign_in_with_background"
            tools:layout_editor_absoluteX="228dp"
            tools:layout_editor_absoluteY="659dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="29dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/github" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/signInWithGoogle"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="20sp"
            android:elevation="3sp"
            android:background="@drawable/button_sign_in_with_background"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="665dp">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/google" />
        </FrameLayout>

    </LinearLayout>




    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/signInGif"
        android:layout_width="143dp"
        android:visibility="gone"
        android:layout_height="85dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="119dp"
        android:src="@drawable/progresssignin"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent" />


</LinearLayout>